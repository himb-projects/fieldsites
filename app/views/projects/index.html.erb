<% provide(:title, 'Projects') %>

<div class="row">
	<div class="col-md-12">
    <h3>Projects</h3>


    <p><%= link_to 'New Project', new_project_path, class: "btn btn-primary" %></p>
		<p>Download projects: <%= link_to "CSV", projects_path(format: "csv") %></p>

		<ul class="list-group">
			<li class="list-group-item">
				<div class="row">
					<div class="col-md-2">
						<strong>Project name</strong>
					</div>
					<div class="col-md-3">
						<strong>Project description</strong>
					</div>
					<div class="col-md-2">
						<strong>Start date</strong>
					</div>
					<div class="col-md-2">
						<strong>End date</strong>
					</div>
					<div class="col-md-2">
						<strong>PI</strong>
					</div>
					<div class="col-md-1">
					</div>
				</div>
			</li>
      <%= render @projects %>
    </ul>


  </div>
</div>
